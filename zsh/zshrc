# from zprezto utility module
alias cd='nocorrect cd'
alias cp='nocorrect cp'
alias gcc='nocorrect gcc'
alias grep='nocorrect grep'
alias ln='nocorrect ln'
alias mkdir='nocorrect mkdir -p'
alias mv='nocorrect mv'
alias rm='nocorrect rm'

alias find='noglob find'
alias ftp='noglob ftp'
alias history='noglob history'
alias scp='noglob scp'

alias _='sudo'
alias ls='ls --group-directories-first --color=auto'
alias po='popd'
alias pu='pushd'
alias la='ls -A'
alias sl='ls'

# lists the ten most used commands (from zprezto history module)
alias history-stat="history 0 | awk '{print \$2}' | sort | uniq -c | sort -n -r | head"

# custom aliases
alias feh='feh --scale-down'
# use `maim` to screenshot the entire screen to a file
# screenshot the selected area to a file
alias maims='maim -s -p 1 -c 1,0,0,0.1 --nokeyboard'
# screenshot the entire screen to the clipboard
alias maimc='notify-send "Taking screenshot to clipboard in 3 seconds...";
             maim -d 3 --format=png /dev/stdout | xclip -selection c -t image/png'
# screenshot the selected area to the clipboard
alias maimsc='maim -s -p 1 -c 1,0,0,0.1 --nokeyboard --format=png /dev/stdout | xclip -selection c -t image/png'
alias top='htop'
alias pacman='yaourt'
alias vim='nvim'
alias sudovimdiff='SUDO_EDITOR="nvim -d" sudoedit'
alias gdb='gdb -q'
alias objdump='objdump -M intel'
alias zmv='noglob zmv -W'

# place temporary aliases and variables here

# fasd aliases
alias v='f -e nvim'
alias e='f -e emacs'
alias o='a -e xdg-open'
alias l='d -e "ls --group-directories-first --color=auto"'

# ledger aliases
export LEDGER_FILE="~/s/doc/finance/y$(date +%Y).txt"
alias bal="ledger -X \$ --strict --explicit --invert bal"
alias reg="ledger -X \$ --strict --explicit reg"
alias lgr="ledger -X \$ --strict --explicit"
alias rkn="reckon -f ~/EXPORT.CSV -a Assets:Checking -l ~/s/doc/finance/y2012-2016.txt -o $LEDGER_FILE --ignore-columns 1,3,6,7,8 --contains-header 1 --date-format \"%m/%d/%y\""

# magic aliases (expand with <SPACE>)
typeset -Ag abbreviations
abbreviations=(
    "Ia"    "| awk"
    "Ic"    "| xclip -sel c"
    "Ig"    "| ag"
    "Ih"    "| head"
    "Il"    "| less"
    "It"    "| tail"
    "Is"    "| sort"
    "Iv"    "| ${VISUAL:-${EDITOR}}"
    "Iw"    "| wc"
    "Ix"    "| xargs"
)

#############################################################################
##`````````````````````````````````````````````````````````````````````````##
##```````````````````````````````FUNCTIONS`````````````````````````````````##
##`````````````````````````````````````````````````````````````````````````##
#############################################################################
# from the zprezto utility module
# makes a directory and changes to it.
function mkdcd {
    [[ -n "$1" ]] && mkdir -p "$1" && builtin cd "$1"
}

# Changes to a directory and lists its contents.
function cs {
    builtin cd "$argv[-1]" && ls "${(@)argv[1,-2]}"
}

# Pushes an entry onto the directory stack and lists its contents.
function pushdls {
    builtin pushd "$argv[-1]" && ls "${(@)argv[1,-2]}"
}
    
# Pops an entry off the directory stack and lists its contents.
function popdls {
    builtin popd "$argv[-1]" && ls "${(@)argv[1,-2]}"
}

# enables magic expansion using <SPACE>
magic-abbrev-expand() {
    local MATCH
    LBUFFER=${LBUFFER%%(#m)[_a-zA-Z0-9]#}
    LBUFFER+=${abbreviations[$MATCH]:-$MATCH}
    zle self-insert
}

# just in case you don't want a magic expansion expanded
no-magic-abbrev-expand() {
    LBUFFER+=' '
}

# colored man pages
man() {
    env \
        LESS_TERMCAP_mb=$(printf "\e[1;31m") \
        LESS_TERMCAP_md=$(printf "\e[1;31m") \
        LESS_TERMCAP_me=$(printf "\e[0m") \
        LESS_TERMCAP_se=$(printf "\e[0m") \
        LESS_TERMCAP_so=$(printf "\e[1;44;33m") \
        LESS_TERMCAP_ue=$(printf "\e[0m") \
        LESS_TERMCAP_us=$(printf "\e[1;32m") \
        PAGER="${commands[less]:-$PAGER}" \
        _NROFF_U=1 \
        PATH="$HOME/bin:$PATH" \
        man "$@"
}

